# vi: set ft=sh :

if [[ $(uname) == Darwin ]]; then
  alias la="ls -pa"
  alias ls="ls -p"
  alias ll="ls -plh"
else
  alias la="ls --color -pa"
  alias ls="ls --color -p"
  alias ll="ls --color -plh"
fi

alias :q="exit"
alias tree="tree -C"
alias c="cd ~; clear"

alias ra="ranger"

alias v="nvim"
alias vu="nvim +PlugInstall"
alias vrc="nvim ~/.dotfiles/neovim/.config/nvim/init.vim"

alias t="tmux"

alias agh="ag --hidden"

alias zrc="nvim ~/.dotfiles/zsh/.zshrc"
alias rzsh="source ~/.zshrc && source ~/.zshrc.local"

alias rpca="RAILS_ENV=development bundle exec rake assets:precompile"

alias be="bundle exec"
alias bu="bundle update"
alias bi="bundle install"
alias bes="SKIP_SIMPLECOV=true bundle exec rspec"
alias bep="SKIP_SIMPLECOV=true bundle exec rake parallel:spec[8]"
alias ber="bundle exec rails"

alias mi="bundle exec rake db:migrate"
alias mit="RAILS_ENV=test bundle exec rake db:migrate"
alias pmit="bundle exec rake parallel:migrate[8]"

alias winbox="wine ~/opt/winbox.exe"

alias mine="wget -e robots=off -r -nc -np"

alias startpg="sudo systemctl start postgresql"
alias stoppg="sudo systemctl stop postgresql"

alias clean_devdb="RAILS_ENV=development bundle exec rake db:drop db:setup"
alias clean_testdb="RAILS_ENV=test bundle exec rake db:drop db:setup"
alias pclean_testdb="bundle exec rake parallel:drop[8] parallel:setup[8]"

alias prs="wf --pull-requests"

[[ -f ~/.zsh/git.sh ]] && source ~/.zsh/git.sh ]]
[[ -f ~/.aliases.local ]] && source ~/.aliases.local ]]
