# vi: set ft=sh :

alias la="ls --color -pa"
alias ls="ls --color -p"
alias ll="ls --color -plh"

alias :q="exit"
alias tree="tree -C"
alias c="cd ~; clear"

alias da="dasht"
alias ra="ranger"

alias v="nvim"
alias vu="nvim +PlugInstall"
alias vrc="nvim ~/.dotfiles/neovim/.config/nvim/init.vim"

alias t="tmux"

alias agh="ag --hidden"

alias zrc="nvim ~/.dotfiles/zsh/.zshrc"
alias rzsh="source ~/.zshrc && source ~/.zshrc.local"

alias rpca="RAILS_ENV=production bundle exec rake assets:precompile"

alias be="bundle exec"
alias bu="bundle update"
alias bi="bundle install"
alias bes="bundle exec rspec"
alias bep="bundle exec rake parallel:spec[8]"
alias ber="bundle exec rails"

alias mi="bundle exec rake db:migrate"
alias mit="RAILS_ENV=test bundle exec rake db:migrate"

alias winbox="wine ~/opt/winbox.exe"

alias mine="wget -e robots=off -r -nc -np"

alias clean_testdb="RAILS_ENV=test bundle exec rake db:drop && RAILS_ENV=test bundle exec rake db:create && RAILS_ENV=test bundle exec rake db:migrate && RAILS_ENV=test bundle exec rake db:seed"
alias pclean_testdb="bundle exec rake parallel:drop[8] && bundle exec rake parallel:create[8] && bundle exec rake parallel:migrate[8] && bundle exec rake parallel:seed[8]"

[[ -f ~/.zsh/git.sh ]] && source ~/.zsh/git.sh ]]
[[ -f ~/.aliases.local ]] && source ~/.aliases.local ]]
