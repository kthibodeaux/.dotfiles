#!/bin/sh
if [ $# -eq 0 ]; then
  echo "No filename name given.  Provide a filename to extract."
  exit
fi

case $1 in
  *.tar.bz2)   tar xvjf $1    ;;
  *.tar.gz)    tar xvzf $1    ;;
  *.bz2)       bunzip2 $1     ;;
  *.rar)       unrar x $1     ;;
  *.gz)        gunzip $1      ;;
  *.tar)       tar xvf $1     ;;
  *.tbz2)      tar xvjf $1    ;;
  *.tgz)       tar xvzf $1    ;;
  *.zip)       unzip $1       ;;
  *.Z)         uncompress $1  ;;
  *)           echo "don't know how to extract '$1'" ;;
esac
