# vi: set ft=sh :
mkdir ~/opt
mkdir ~/src
mkdir -p ~/.local/share

sudo cp ~/.dotfiles/common/safe-rm.conf /etc/safe-rm.conf

mv ~/.Xresources ~/.Xresources.original
mv ~/.gtkrc-2.0 ~/.gtkrc-2.0.original
mv ~/.config/gtk-3.0 ~/.config/gtk-3.0.original
mv ~/.config/dunst ~/.config/dunst.original
mv ~/.config/ranger ~/.config/ranger.original

sudo pacman -Syu

sudo pacman -S --noconfirm pacaur stow

. ~/.dotfiles/stow_all

pacaur -S --noconfirm \
  alacritty \
  aspell \
  avr-gcc \
  avr-libc \
  aws-cli \
  chruby \
  docker \
  docker-compose \
  dunst-git \
  enpass-bin \
  evince \
  feh \
  firefox \
  gdk-pixbuf2 \
  gitflow-avh \
  glib2 \
  heroku-cli \
  i3blocks \
  inkscape \
  isync \
  mpv \
  msmtp \
  ncdu \
  nemo \
  neovim \
  nerd-fonts-hack \
  nginx \
  nodejs \
  openssh \
  pa-applet \
  pavucontrol \
  pgcli-git \
  pulseaudio-bluetooth \
  python-neovim \
  ranger \
  redshift-gtk-git \
  rtv \
  rofi \
  ruby-install \
  safe-rm \
  sassc \
  signal-desktop \
  scrot \
  silver-searcher-git \
  teensy_loader_cli \
  tig \
  tmux \
  unzip \
  urlview-git \
  youtube-dl \
  xclip \
  zsh

fc-cache -f -v
sudo systemctl enable sshd
sudo systemctl enable docker.service
sudo usermod -aG docker $USER

sudo systemctl enable nginx
sudo systemctl start nginx

. ~/.dotfiles/setup_steps/shell.sh
. ~/.dotfiles/setup_steps/ruby.sh
. ~/.dotfiles/setup_steps/gtk.sh
. ~/.dotfiles/setup_steps/tmux_plugins.sh
